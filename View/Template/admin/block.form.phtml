<?php

use Krystal\Form\Element;

?>

<form data-group="block">

	<div class="well clearfix">
        <?php echo Element::hidden('block[id]', $block->getId()); ?>

		<div class="form-group clearfix">
			<label class="col-lg-2 control-label"><?php $this->show('Name'); ?></label>
			<div class="col-lg-10">
				<div class="input-group">
                    <?php echo Element::text('block[name]', $block->getName(), array('class' => 'form-control', 'readonly' => !$extendedMode, 'placeholder' => $this->translate("Block's name"))); ?>
					<span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
				</div>
			</div>
		</div>

		<div class="form-group clearfix">
			<label class="col-lg-2 control-label"><?php $this->show('Content'); ?></label>
			<div class="col-lg-10">
				<div class="input-group">
                    <?php echo Element::textarea('block[content]', $block->getContent(), array('class' => 'form-control', 'rows' => '7', 'placeholder' => $this->translate("Block's plain text content"))); ?>
					<span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
				</div>
			</div>
		</div>
		
		<?php if ($extendedMode): ?>
		<div class="form-group clearfix">
			<label class="col-lg-2 control-label"><?php $this->show('Class'); ?></label>
			<div class="col-lg-10">
				<div class="input-group">
                    <?php echo Element::text('block[class]', $block->getClass(), array('class' => 'form-control', 'placeholder' => $this->translate("Class's name to simplify rendering"))); ?>
					<span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
				</div>
			</div>
		</div>
		<?php else: ?>
		
        <?php echo Element::hidden('class', $block->getClass()); ?>
        
		<?php endif; ?>
		
	</div>
	
	<?php if ($block->getId()): ?>
	
    <button data-button="save" data-url="<?php echo $this->url('Block:Admin:Block@saveAction'); ?>" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-save"></i> <?php $this->show('Save'); ?></button>
	<button data-button="save-create" data-back-url="<?php echo $this->url('Block:Admin:Block@addAction'); ?>" data-url="<?php echo $this->url('Block:Admin:Block@saveAction'); ?>" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-open"></i> <?php $this->show('Save & Create new'); ?></button>
	
	<?php else: ?>
    
	<button data-button="add" data-back-url="<?php echo $this->url('Block:Admin:Block@editAction', null); ?>" data-url="<?php echo $this->url('Block:Admin:Block@saveAction'); ?>" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-save"></i> <?php $this->show('Add'); ?></button>
	<button data-button="add-create" data-url="<?php echo $this->url('Block:Admin:Block@saveAction'); ?>" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-open"></i> <?php $this->show('Add & Create new'); ?></button>
	
	<?php endif; ?>
	
	<button data-button="cancel" data-url="<?php echo $this->url('Block:Admin:Block@gridAction'); ?>" class="btn btn-default"><i class="glyphicon glyphicon-floppy-remove"></i> <?php $this->show('Cancel'); ?></button>
	
</form>
